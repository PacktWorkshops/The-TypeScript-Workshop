{
	"compilerOptions": {
		"incremental": true,
		"target": "es2019",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["es2019", "dom"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
